{
  "name": "@blockr/blockr-validator",
  "version": "2.0.0",
  "description": "Blockr validator package",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build-watch": "tsc -w -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint --project tsconfig.json",
    "dev": "npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ESD6-blockr/blockr-validator.git"
  },
  "author": "Blockr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OrdinaBlockchain/blockchain-validator/issues"
  },
  "dependencies": {
    "@blockr/blockr-data-access": "^2.0.0-8",
    "@blockr/blockr-models": "^1.3.0-11",
    "@sentry/node": "^4.6.6",
    "bip39": "^3.0.1",
    "inversify": "^5.0.1",
    "js-nacl": "^1.3.2",
    "module-alias": "^2.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/js-nacl": "^1.2.0",
    "@types/mongodb": "^3.1.25",
    "@types/node-cron": "^2.0.2",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tsutils": "^3.9.1",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "_moduleAliases": {
    "app": "dist"
  }
}
